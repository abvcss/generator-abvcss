    mode: 'production',

    module: {
        rules: [{
            test: /\.css$/,
            use: [                
                MiniCssExtractPlugin.loader,
                {
                    loader: 'css-loader', options: {
                        importLoaders: 1
                    }
                },
                {
                    loader: 'postcss-loader', options: {  
                        ident: 'postcss',                      
                        plugins: [
                            postcssPresetEnv({
                                insertBefore: {
                                    'import': require('postcss-import')
